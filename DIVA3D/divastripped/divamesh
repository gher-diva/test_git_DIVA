#!/bin/bash
source diva_profile
echo //////////////////////////////////////////////////
echo                Mesh generation
echo //////////////////////////////////////////////////
echo ' '
if [ -f  ] 
then
cp ${divacontourfile} ${DIVAMESHGENWORKDIR}fort.10
else
echo Need to provide coast.cont in ./input !
fi
isdens=0
if [ -f ${DIVAINPUTDIR}coast.cont.dens ] 
then
echo There is a density file for the mesh
cp -v ${DIVAINPUTDIR}coast.cont.dens ${DIVAMESHGENWORKDIR}'fort.12'
isdens=1
fi
##echo $isdens
if [ -f ${divaparamfile} ] 
then
echo Reading parameters
else
echo Need to provide param.par in ./input/
fi
Filepar=${DIVAINPUTDIR}'param.par'
{
read linecomment
read lc
read linecomment
read icoordchange
read linecomment
read ispec
read linecomment
read ireg
read linecomment
read xori
read linecomment
read yori
read linecomment
read dx
read linecomment
read dy
read linecomment
read nx
read linecomment
read ny
read linecomment
read valex
read linecomment
read snr
read linecomment
read varbak
} < $Filepar
#param.par
#creation of files for mesh generation
#creation of file fort.11 for gener.a
#rm fort.11
#exec 11<>fort.11
#echo 0 > ./meshgenwork/fort.11
#echo $lc >> ./meshgenwork/fort.11
#echo 1.5 >> ./meshgenwork/fort.11
#echo 5 >> ./meshgenwork/fort.11
#exec 11>&-

##rm -f fort.11

echo $isdens > ${DIVAMESHGENWORKDIR}fort.11
echo $(echo $lc | awk '{print ($lc/5)}') >> ${DIVAMESHGENWORKDIR}fort.11

##echo $isdens $lc | ${DIVABINDIR}lcelem.a
##cp fort.11 ${DIVAMESHGENWORKDIR}fort.11
echo 1.5 >> ${DIVAMESHGENWORKDIR}fort.11
echo 5 >> ${DIVAMESHGENWORKDIR}fort.11
#exec 11>&-
#generation of the mesh
cd ${DIVAMESHGENWORKDIR}
echo $icoordchange | ${DIVABINDIR}generopt.a >> ${divalogfile}
cd ${DIVADIR}

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divamesh      generopt.a
echo Check execution track
echo --------------------------------------------
echo ' ' >> ${divalogfile}
echo -------------------------------------------- >> ${divalogfile}
echo A problem was encountered during execution ! >> ${divalogfile}
echo          divamesh      generopt.a  >> ${divalogfile}
echo Check execution track >> diva.log
echo -------------------------------------------- >> ${divalogfile}
fi
File23=${DIVAMESHGENWORKDIR}fort.23
{
read nnt1
read nnint
read nelt
} < $File23
#output of info for mesh visualisation with meshvisu.m
echo ' '
echo Copying output files for visualisation 
echo in directory ./output/meshvisu/ 
cp ${DIVAMESHGENWORKDIR}fort.10 ${DIVAMESHGENWORKDIR}fort.22 ${DIVAMESHGENWORKDIR}fort.23 ${DIVAMESHVISUDIR}
 
#exec 23<>fort.23
#read  nnt1 nnint nelt <&3
#exec 23>&-
echo ' '
echo ---------------
echo Mesh is created
echo ---------------
echo ' '
